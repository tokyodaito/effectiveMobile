<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <!-- Установка цвета фона для кнопки -->
            <solid android:color="#D62F89" />

            <!-- Установка радиуса для каждого угла -->
            <corners android:bottomLeftRadius="0dp" android:bottomRightRadius="8dp" android:topLeftRadius="8dp" android:topRightRadius="0dp" />

            <!-- Опционально: установка padding для кнопки -->
        </shape>
    </item>
</selector>
